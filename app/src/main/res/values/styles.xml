<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GifCardView">
        <item name="android:layout_marginBottom">@dimen/cardViewMarginBottom</item>
        <item name="android:paddingLeft">@dimen/cardViewPaddingLeft</item>
        <item name="android:paddingRight">@dimen/cardViewPaddingRight</item>
    </style>

    <style name="GifToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/gifToolbarElevation</item>
    </style>

    <style name="CurrentGifImage">
        <item name="android:layout_marginStart">@dimen/standardMargin</item>
        <item name="android:layout_marginTop">@dimen/standardMargin</item>
        <item name="android:layout_marginEnd">@dimen/standardMargin</item>
        <item name="android:layout_marginBottom">@dimen/standardMargin</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="SearchET">
        <item name="android:layout_marginStart">@dimen/standardMargin</item>
        <item name="android:layout_marginTop">@dimen/standardMargin</item>
        <item name="android:layout_marginEnd">@dimen/standardMargin</item>
        <item name="android:layout_marginBottom">@dimen/standardMargin</item>
        <item name="android:background">@drawable/rounded_corners_et</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:imeOptions">actionSearch</item>
        <item  name="android:inputType">text</item>
        <item name="android:paddingLeft">@dimen/searchETPaddingLR</item>
        <item name="android:paddingRight">@dimen/searchETPaddingLR</item>
        <item name="android:paddingTop">@dimen/searchETPaddingTB</item>
        <item name="android:paddingBottom">@dimen/searchETPaddingTB</item>
    </style>

    <style name="yourLastSearchMsg">
        <item name="android:layout_marginStart">@dimen/standardMargin</item>
        <item name="android:layout_marginLeft">@dimen/standardMargin</item>
        <item name="android:text">@string/your_last_search_msg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LastSearchQuery">
        <item name="android:layout_marginStart">@dimen/standardMargin</item>
        <item name="android:layout_marginLeft">@dimen/standardMargin</item>
        <item name="android:text">gif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/lastSearchQueryTxtSize</item>
        <item name="android:textStyle">italic</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="GifItemTitle">
        <item name="android:layout_marginStart">@dimen/standardMargin</item>
        <item name="android:layout_marginTop">@dimen/standardMargin</item>
        <item name="android:layout_marginEnd">@dimen/standardMargin</item>
        <item name="android:layout_marginBottom">@dimen/standardMargin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/GifItemTitleTxtSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GifItemImage">
        <item name="android:layout_marginTop">@dimen/standardMargin</item>
        <item name="android:layout_marginBottom">@dimen/standardMargin</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/gif_image</item>
    </style>

    <style name="ShareBtn">
        <item name="android:layout_marginEnd">@dimen/standardMargin</item>
        <item name="android:layout_marginBottom">@dimen/standardMargin</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:drawableLeft">@drawable/ic_share_white</item>
        <item name="android:text">@string/share_txt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_w_rounded_corners</item>
    </style>

    <style name="SaveBtn">
        <item name="android:layout_marginEnd">@dimen/standardMargin</item>
        <item name="android:layout_marginBottom">@dimen/standardMargin</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:drawableLeft">@drawable/ic_save_white</item>
        <item name="android:text">@string/save_txt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_w_rounded_corners</item>
    </style>

    <style name="GifRecyclerView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

</resources>
